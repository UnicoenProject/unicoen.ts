{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "jsRules": {},
  "rules": {
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "member-access": [true, "no-public"],
    "interface-name": [true, "never-prefix"],
    "no-console": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules",
      "src/**/*.d.ts",
      "src/node/Uni*.ts",
      "src/**/*Parser.ts",
      "src/**/*Lexer.ts",
      "src/**/*Visitor.ts"
    ]
  }
}
